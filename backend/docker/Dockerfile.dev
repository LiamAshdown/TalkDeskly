FROM golang:1.24-alpine

WORKDIR /app

# Install build dependencies for CGO (required for webp library)
RUN apk add --no-cache gcc musl-dev

RUN go install github.com/cosmtrek/air@v1.45.0

# Copy go mod files first and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the code
COPY . .

# Enable CGO for webp library compatibility
ENV CGO_ENABLED=1

CMD ["air"]